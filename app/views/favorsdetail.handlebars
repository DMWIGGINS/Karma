<main>
    <div class="container">
        <div class="row" id="favors-detail">
            <div class="col s5">
                <img src="/assets/images/goodvibes.jpg" width="90%">
            </div>
            <div class="col s6">
                <h3 class="favoredet">Favor Details</h3>
                <ul>
                    <lh id="favorsdetail">
                        <li class="favor-detail">
                           
                            <span><p id="favorname" value={{this.favor_name}} class="label2">Favor: </p><p>{{this.favor_name}}</p></span>
                            <span><p id="favordesc" value={{this.favor_desc}} class="label2">Description: </p><p>{{this.favor_desc}}</p></span>
                            <span><p id="favorprice" value={{this.favor_price}} class="label2">Koins Offered: </p><p>{{this.favor_price}}</p></span>
                            <span><p id="favordatetime" value={{this.favor_datetime}} class="label2">DateTime: </p><p>{{this.favor_datetime}}</p></span>
                            <span><p id="favorstatus" value={{this.favor_status}} class="label2">Status: </p><p>{{this.favor_status}}</p></span>
                            
                            <span><p id="favoraskername" value={{this.favor_asker_name}} class="label2">Favor Asker: </p><p>{{this.favor_asker_name}}</p></span>
                            {{!-- <span><p id="favorcompleterid" value={{this.favor_completer_id}} class="label2">Favor Completer: </p><p>{{this.favor_completer_id}}</p></span> --}}
                            <span><p id="favorcompletername" value={{this.favor_completer_name}} class="label2">Favor Completer: </p><p>{{this.favor_completer_name}}</p></span>
                            <button id="pendingBtn" class="btn" type="submit" name="action"
                                 data-id={{this.id}} 
                                data-asker-id={{this.favor_asker_id}}
                                data-favor-price={{this.favor_price}}
                                >I'll do this
                                <i class="material-icons right">send</i>
                            </button>
                            <button id="completedBtn" class="btn" type="submit" name="action"
                             data-id={{this.id}} 
                                data-asker-id={{this.favor_asker_id}}
                                 data-completer-id={{this.favor_completer_id}}
                                data-favor-price={{this.favor_price}}
                            >This favor is completed
                                <i class="material-icons right">send</i>
                            </button>
                        </li>
                    </lh>
                </ul>
            </div>
        </div>
    </div>

