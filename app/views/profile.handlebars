<main>
    <div class="container" id="profile">
        <div class="row" id="profile-info">
            <div class="col s12">
                <img id="profilepicture" src="{{user.profile_pic_link}}" width="50%">
            </div>
            <div class="col s12">
                <div class="usernameclass"></div>
                <h3 id="username">{{user.user_name}}</h3>
                <div class="koinsclass"></div>
                <h3 id="koins">Koins: {{user.user_karma_koins}}</h3>
            </div>
        </div>
    </div>
    <div class="container" id="profile-favors">
        <div class="row">
            <div class="col s2"></div>
            <div class="col s4" id="asked-pending">
                <h4>My Favors Asked</h4>
                <ul>
                    <lh id="favor">{{#each askedPendingFavors}}
                        <li class="activeFavors">
                            <p class="label">Favor: {{this.favor_name}} </p>
                            <p class="label">Karma Koins Offered: {{this.favor_price}} </p>
                            <p class="label">Date and Time: {{this.favor_datetime}}</p>
                            <p class="label">Status: {{this.favor_status}} </p>
                            <p class="label">Favor Completer: {{this.favor_completer_name}} </p>
                            <p>
                                <a href="/favorsdetail/{{this.id}}">Link to more Info</a>
                            </p>
                        </li>
                        <br>
                    </lh>
                    {{/each}}
                </ul>
            </div>
            <div class="col s2‰"></div>
            <div class="col s4" id="returned-completed">
                <h4>My Favors Returned</h4>
                <ul>
                    <lh id="favor">{{#each givenPendingFavors}}
                        <li class="activeFavors">
                            <p class="label">Favor: {{this.favor_name}} </p>
                            <p class="label">Karma Koins Offered: {{this.favor_price}} </p>
                            <p class="label">Date and Time: {{this.favor_datetime}}</p>
                            <p class="label">Status: {{this.favor_status}} </p>
                            <p class="label">Favor Asker: {{this.favor_asker_name}} </p>
                            <p>
                                <a href="/favorsdetail/{{this.id}}">Link to more Info</a>
                            </p>
                        </li>
                        <br>
                    </lh>
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
    </div>
</main>
